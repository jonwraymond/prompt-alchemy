{
  "name": "prompt-alchemy-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Prompt Alchemy HTMX interface",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:dev": "node test-dev.js",
    "test:dev:single": "node test-dev.js --single",
    "test:dev:debug": "node test-dev.js --debug",
    "test:dev:ui": "node test-dev.js --ui",
    "dev:watch": "node dev-watch.js",
    "dev:start": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "dev:full": "concurrently \"npm run dev:watch\" \"npm run test:dev\""
  },
  "keywords": [
    "testing",
    "playwright",
    "htmx",
    "e2e"
  ],
  "author": "Prompt Alchemy Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "concurrently": "^8.2.0"
  }
}
