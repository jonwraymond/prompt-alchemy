# Prompt Alchemy Environment Variables
# Copy this to .env and fill in your actual API keys

# OpenAI Configuration
PROMPT_ALCHEMY_PROVIDERS_OPENAI_API_KEY=sk-your-openai-api-key-here
PROMPT_ALCHEMY_PROVIDERS_OPENAI_MODEL=gpt-4-turbo-preview
PROMPT_ALCHEMY_PROVIDERS_OPENAI_TIMEOUT=30

# OpenRouter Configuration  
PROMPT_ALCHEMY_PROVIDERS_OPENROUTER_API_KEY=sk-or-your-openrouter-key-here
PROMPT_ALCHEMY_PROVIDERS_OPENROUTER_MODEL=openai/gpt-4-turbo-preview
PROMPT_ALCHEMY_PROVIDERS_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
PROMPT_ALCHEMY_PROVIDERS_OPENROUTER_TIMEOUT=30

# Anthropic Claude Configuration
PROMPT_ALCHEMY_PROVIDERS_CLAUDE_API_KEY=sk-ant-your-anthropic-key-here
PROMPT_ALCHEMY_PROVIDERS_CLAUDE_MODEL=claude-3-opus-20240229
PROMPT_ALCHEMY_PROVIDERS_CLAUDE_TIMEOUT=30

# Google Gemini Configuration
PROMPT_ALCHEMY_PROVIDERS_GEMINI_API_KEY=your-google-api-key-here
PROMPT_ALCHEMY_PROVIDERS_GEMINI_MODEL=gemini-pro
PROMPT_ALCHEMY_PROVIDERS_GEMINI_TIMEOUT=30

# Phase Provider Assignments
PROMPT_ALCHEMY_PHASES_IDEA_PROVIDER=openai
PROMPT_ALCHEMY_PHASES_HUMAN_PROVIDER=claude
PROMPT_ALCHEMY_PHASES_PRECISION_PROVIDER=gemini

# Generation Settings
PROMPT_ALCHEMY_GENERATION_DEFAULT_TEMPERATURE=0.7
PROMPT_ALCHEMY_GENERATION_DEFAULT_MAX_TOKENS=2000
PROMPT_ALCHEMY_GENERATION_DEFAULT_COUNT=3
PROMPT_ALCHEMY_GENERATION_USE_PARALLEL=true

# Data Storage
PROMPT_ALCHEMY_DATA_DIR=~/.prompt-alchemy

# Logging
PROMPT_ALCHEMY_LOG_LEVEL=info

# Optional: Database URL (if using external database instead of SQLite)
# PROMPT_ALCHEMY_DATABASE_URL=postgres://user:pass@localhost/prompt_alchemy

# Optional: Embedding Provider Configuration
# PROMPT_ALCHEMY_EMBEDDING_PROVIDER=openai
# PROMPT_ALCHEMY_EMBEDDING_MODEL=text-embedding-ada-002

# Optional: MCP Server Configuration
# PROMPT_ALCHEMY_MCP_PORT=8080
# PROMPT_ALCHEMY_MCP_HOST=localhost
